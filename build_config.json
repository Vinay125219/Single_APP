{
  "app_name": "device_monitor",
  "version": "1.0.0",
  "description": "Device Monitor Application with USB monitoring and system control",
  "author": "Device Monitor Team",
  "platforms": {
    "linux": {
      "executable_name": "device_monitor_linux",
      "icon": null,
      "console": false,
      "upx": true
    },
    "windows": {
      "executable_name": "device_monitor_windows",
      "icon": null,
      "console": false,
      "upx": true,
      "version_info": true
    }
  },
  "modes": {
    "normal": {
      "description": "Standard GUI application",
      "environment": {},
      "arguments": []
    },
    "kiosk": {
      "description": "Kiosk mode with auto-boot functionality",
      "environment": {
        "KIOSK": "1"
      },
      "arguments": ["--kiosk"]
    }
  },
  "pyinstaller": {
    "hidden_imports": [
      "tkinter",
      "tkinter.ttk",
      "tkinter.messagebox",
      "tkinter.filedialog",
      "threading",
      "subprocess",
      "queue",
      "logging",
      "pathlib",
      "json",
      "win32serviceutil",
      "win32service",
      "win32event",
      "servicemanager",
      "win32ts",
      "win32con",
      "win32api",
      "win32gui",
      "win32process"
    ],
    "exclude_modules": [
      "matplotlib",
      "numpy",
      "scipy",
      "pandas"
    ],
    "data_files": [
      {
        "source": "main.py",
        "destination": "."
      }
    ]
  },
  "build_options": {
    "clean": true,
    "noconfirm": true,
    "strip": false,
    "optimize": 2
  }
}